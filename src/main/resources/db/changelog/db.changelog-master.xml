<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd">

    <preConditions>
        <dbms type="mongodb"/>
    </preConditions>

    <changeSet id="0" author="julia_kaiko">
        <tagDatabase tag="db_init"/>
    </changeSet>

    <!-- relativeToChangelogFile - файл ищется относительно db.changelog-master.xml -->
    <include file="v.1.0/db.changelog-v.1.0.xml" relativeToChangelogFile="true"/>

    <changeSet id="1" author="julia_kaiko">
        <tagDatabase tag="v.1.0"/>
    </changeSet>

    <include file="v.2.0/db.changelog-v.2.0.xml" relativeToChangelogFile="true"/>

    <changeSet id="2" author="julia_kaiko">
        <tagDatabase tag="v.2.0"/>
    </changeSet>

    <include file="v.3.0/db.changelog-v.3.0.xml" relativeToChangelogFile="true"/>

    <changeSet id="3" author="julia_kaiko">
        <tagDatabase tag="v.3.0"/>
    </changeSet>

</databaseChangeLog>
